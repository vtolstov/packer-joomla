{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [],
      "boot_wait": "5s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "disk_image": true,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum_type": "none",
      "iso_url": "output/joomla-base-x86_64-qemu/joomla-base-x86_64",
      "net_device": "virtio-net",
      "output_directory": "output/joomla-3-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "1500"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "joomla-3-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/diskfix.sh",
        "scripts/joomla.sh",
        "scripts/cloud.sh",
        "scripts/grubfix.sh",
        "scripts/charmclean.sh",
        "scripts/cloudinit-config.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "compress",
        "format": "bgzf",
        "output": "output/joomla-3-x86_64-compress/",
        "only": ["qemu"]
      }
    ]
  ]
}
